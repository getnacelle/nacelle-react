{
  "npmClient": "npm",
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "version": "5.0.0",
  "publish": {
    "allowBranch": "main",
    "ignoreChanges": [
      "*.md",
      ".gitignore",
      "**/**/**.test.*",
      "**/.storybook/**",
      "**/**/*.fixtures.**"
    ],
    "message": "chore(release): publish"
  },
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
